<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_communities_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar_5"/>

        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/app_The_Design_Sphere"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/img_communities_user"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/members_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_communities_user"
            android:text="@string/app_10M_Members"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/type_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="@string/app_Technology"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/img_communities_user"
            android:layout_below="@+id/members_user"
            android:layout_marginStart="10dp"/>


    </RelativeLayout>
        

</androidx.cardview.widget.CardView>