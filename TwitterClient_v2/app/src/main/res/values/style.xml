<resources>
    <!-- Circular ImageView -->
    <style name="CircleImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundCornerImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="HeadIntroduction">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="ShortDescription">
        <item name="android:textColor">#C0C0C0</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="item_text">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Custom for searchview in email fragment  -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/custom_hint_color</item>

        <item name="android:textSize">13sp</item>

        <item name="android:textColor">@color/custom_text_color</item>

        <item name="searchIcon">@drawable/search_icon_white_search_view</item>
    </style>
</resources>